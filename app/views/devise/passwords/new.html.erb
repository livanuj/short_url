
<div class="flex flex-col items-center justify-center w-screen h-screen bg-gray-200 text-gray-700">
  <h1 class="flex items-center justify-center font-semibold text-xl">Forgot your password?</h1>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "flex flex-col bg-white rounded shadow-lg p-12 mt-12" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "font-semibold text-xs"  %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "flex items-center h-12 px-4 w-64 bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2" %>
    </div>

    <div class="flex mt-6 justify-center text-base">
      <%= f.submit "Send me reset password instructions", class: "text-blue-400 hover:text-blue-500 bg-white"  %>
    </div>
    <div class="flex mt-6 justify-center text-xs">
      <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-400 hover:text-blue-500" %><br />
      <span class="mx-2 text-gray-300">/</span>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-400 hover:text-blue-500" %><br />
    </div>
  <% end %>
</div>
