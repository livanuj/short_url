<div class="flex flex-col items-center justify-center w-screen h-screen bg-gray-200 text-gray-700">
    <h1 class="flex items-center justify-center font-semibold text-xl"> Sign up </h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html: { class: "flex flex-col bg-white rounded shadow-lg p-12 mt-12" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "font-semibold text-xs" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "flex items-center h-12 px-4 w-64 bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2"  %>
    </div>

    <div class="field">
      <%= f.label :password, class: "font-semibold text-xs mt-3" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "flex items-center h-12 px-4 w-64 bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "font-semibold text-xs mt-3" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "flex items-center h-12 px-4 w-64 bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "flex items-center justify-center h-12 px-6 w-64 bg-blue-600 mt-8 rounded font-semibold text-sm text-blue-100 hover:bg-blue-700" %>
    </div>
    <div class="flex mt-6 justify-center text-xs">
        <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-400 hover:text-blue-500" %><br />
      </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
