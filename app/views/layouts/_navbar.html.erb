 <nav id="header" class="w-full z-30 top-10 py-1 bg-white shadow-lg border-b border-blue-400 bg-blue-200">
  <div class="max-w-6xl px-6 mx-auto flex items-center justify-center ">
    <div class="w-full flex items-center justify-between mt-0 px-6 py-2">
      <div class="hidden md:flex md:items-center md:w-auto w-full order-3 md:order-1" id="menu">
        <nav>
            <ul class="md:flex items-center justify-between text-base text-blue-600 pt-4 md:pt-0">
              <li>
                <%= link_to "Home", root_path, data: { turbolinks: false }, class: "inline-block no-underline hover:text-black font-medium text-lg py-2 px-4 lg:-ml-2" %>
              </li>
              <% if user_signed_in? %>
                <li>
                  <%= link_to "Url List", short_links_path, class: "inline-block no-underline hover:text-black font-medium text-lg py-2 px-4 lg:-ml-2" %>
                </li>
            </ul>
            <% end %>
        </nav>
      </div>
      
      <div class="order-2 md:order-3 flex flex-wrap items-center justify-end mr-0 md:mr-4" id="nav-content">
        <div class="auth flex items-center w-full md:w-full">
          <% if user_signed_in? %>
            Logged in as <%= current_user.email %>
            <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "bg-blue-600 text-gray-200  p-2 rounded  hover:bg-blue-500 hover:text-gray-100 ml-5") %>
          <% else %>
            <%- if controller_name != 'sessions' %>
              <%= link_to "Log in", new_session_path(resource_name), class: "bg-transparent text-gray-800  p-2 rounded border border-gray-300 mr-4 hover:bg-gray-100 hover:text-gray-700" %>
            <% end %>
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Sign up", new_registration_path(resource_name), class: "bg-blue-600 text-gray-200  p-2 rounded  hover:bg-blue-500 hover:text-gray-100" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>
